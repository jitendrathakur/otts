// Loop through list of users
foreach ($users as $key => $user)
{
	// Store user id in variable to use it later
	$user_id = $user[$user_model_name]['id'];
?>
	<tr<?php echo ife($key % 2, ' class="altrow"', ''); ?>>
		<td><?php echo $user[$user_model_name]['name']; ?></td>
		<td><?php echo (count($user['Group']) ? implode(', ', $user['Group']) : '&nbsp;'); ?></td>
		<td>
			<?php echo $html->link(__('Change Group(s)', true), array('plugin' => 'acm', 'controller' => 'users', 'action' => 'groups', $user_id)); ?> &nbsp;
			<?php echo $html->link(__('View Permissions', true), array('plugin' => 'acm', 'controller' => 'users', 'action' => 'permissions', $user_id)); ?>
		</td>
	</tr>
<?php
}
?>
</table>